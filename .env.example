# OpenAI API Configuration (required)
# Get your API key at: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Tavily API Configuration (required - for web search)
# Get your API key at: https://tavily.com/
TAVILY_API_KEY=your_tavily_api_key_here

# Alpha Vantage API Configuration (required - for financial data)
# Get your API key at: https://www.alphavantage.co/support/#api-key
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key_here

# Opik Configuration (for LLM observability)
OPIK_API_KEY=your_opik_api_key_here
OPIK_WORKSPACE=your_workspace_name
OPIK_PROJECT_NAME=ai-problem-first-capstone

# Application Configuration
# PORT is automatically set by Railway - only needed for local development
PORT=8000
ENVIRONMENT=local  # Change to 'production' when deploying
